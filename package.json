{
  "name": "rocket",
  "version": "0.1.0",
  "description": "A pattern library to get your website up and running quickly",
  "author": "Alvin Chan <no@email.com>",
  "license": "ISC",
  "main": "src",
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.css",
        "options": {
          "singleQuote": false
        }
      }
    ]
  },
  "stylelint": {
    "extends": ["stylelint-config-concentric-order"]
